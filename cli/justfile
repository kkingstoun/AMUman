dev cmd="None":
	sudo docker network ls | grep amuman-dev || sudo docker network create amuman-dev
	sudo docker build . -f dev.dockerfile -t amuman-cli
	sudo docker run --rm -it \
		--name amuman-cli \
		--network amuman-dev \
		-v .:/app \
		--env-file ../.env \
		--cap-add SYS_ADMIN \
		--cap-add DAC_READ_SEARCH \
		amuman-cli {{cmd}}