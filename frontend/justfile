dev cmd="bash -c 'npm i && npm run dev'":
	podman network ls | grep amuman-dev || podman network create amuman-dev
	podman run --rm -it --replace \
		--name amuman-frontend-dev \
		--network amuman-dev \
		-p 5173:5173 \
		-v ./..:/app \
		-w /app/frontend \
		docker.io/node:21 {{cmd}}

build: 
	podman run --rm -it \
		-v ./..:/app \
		-w /app/frontend \
		docker.io/node:21 npm i && npm run build
